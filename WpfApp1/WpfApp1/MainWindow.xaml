<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Музыкальный магазин" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="EnsembleListBox" HorizontalAlignment="Left" Width="300" Margin="10" DisplayMemberPath="Name"/>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Width="400" Margin="10">
            <Button Content="Количество музыкальных произведений" Click="ShowMusicPieceCount_Click" Margin="0,5,0,5" />
            <Button Content="Названия компакт-дисков" Click="ShowAlbumTitles_Click" Margin="0,5,0,5" />
            <Button Content="Лидеры продаж текущего года" Click="ShowTopSellers_Click" Margin="0,5,0,5" />
            <Button Content="Изменить/добавить данные о компакт-дисках" Click="OpenAlbumWindow_Click" Margin="0,5,0,5" />
            <Button Content="Добавить новый ансамбль" Click="OpenEnsembleWindow_Click" Margin="0,5,0,5" />
        </StackPanel>
    </Grid>
</Window>
